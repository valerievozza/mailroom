
<div class="container" align="center">
  <div class="card mb-3" style="max-width: 20rem" align="left">
    <h3 class="card-header">Join an organization</h3>
    <div class="card-body">
      <div class="card-text">
        {{>_messages}}
        <form
        action="/join?_method=PUT"
        method="POST"
        >
          <div class="form-group">
              <label for="org">Organization Name</label>
              <input type="text" class="form-control" id="org" name="org" aria-describedby="organization" placeholder="Enter name of organization">
          </div>
          <div class="form-group">
              <label for="codeword">Code word</label>
              <input type="text" class="form-control mb-2" id="codeword" name="codeword" placeholder="Enter codeword">
          </div>
          {{!-- <p><a href="/google">Log in with Google</a></p> --}}
          <div class="form-group">
              <input type="submit" class="btn btn-primary edit-options">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
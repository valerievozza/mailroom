{{#with client}}
<div class="container" align="center">
  <div class="card mb-3" style="max-width: 40rem" align="left">
    <h3 class="card-header">Edit Client Details</h3>
    <div class="card-body">
      <form
        action="/clients//{{_id}}?_method=PUT"
        method="POST"
      >
        <div class="client-form">
          <div class="form-half row gx-3 mt-0">
            <p align="center"><h3>{{firstName}} {{lastName}}</h3></p>
            <div class="form-group col">
              <label class="col-form-label" for="box">Mailbox*</label>
              <div class="flex">
                <input type="text" class="form-control" value="{{boxLetter}}" pattern="[a-zA-Z]{1}" id="boxLetter" name="boxLetter" required>
                <span><i class="fa-solid fa-minus fa-fw"></i></span>
                <input type="text" class="form-control" value="{{boxNumber}}" pattern="[0-9]{1,4}" id="boxNumber" name="boxNumber" required>
              </div>
            </div>
            <div class="form-group col"></div>
            <div class="form-group col"></div>
            <div class="form-group col">
              <label for="safetyConcern" class="form-label">Safety Concern?</label>
              <select class="form-select" id="safetyConcern" name="safetyConcern" value="{{safetyConcern}}">
                <option selected value="{{safetyConcern}}">{{safetyConcern}}</option>
                {{#if (checkSafety safetyConcern)}}
                <option value=false>false</option>
                {{else}}
                <option value=true>true</option>
                {{/if}}
              </select>
            </div> 
          </div>
          <div class="form-half row gx-3 mt-3">
            <div class="form-group w-50 col">
              <label class="col-form-label" for="firstName">First Name*</label>
              <input type="text" class="form-control" id="firstName" name="firstName" value="{{firstName}}" required>
            </div>
            <div class="form-group w-50 col">
              <label class="col-form-label" for="lastName">Last Name*</label>
              <input type="text" class="form-control" id="lastName" name="lastName" value="{{lastName}}" required>
            </div>
          </div>
          <div class="form-group">
            <label class="col-form-label mt-3" for="otherNames">Other Names</label>
            <input type="text" class="form-control" id="otherNames" name="otherNames" value="{{otherNames}}">
          </div>
          <div class="form-half row gx-3 mt-0">
            <div class="form-group col">
              <label for="phone" class="form-label mt-4">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="{{phone}}"></input>
            </div>
            <div class="form-group col">
              <label for="email" class="form-label mt-4">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="{{email}}"></input>
            </div>
          </div>
          <div class="form-group">
            <label for="notes" class="form-label mt-4">Notes</label>
            <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Add any additional notes about this client">{{notes}}</textarea>
          </div>
          <div class="flex-between">
            <div class="edit-options mt-3">
            <button type="submit" class="btn btn-success mt-2">Update</button>
            <a href="/clients" class="btn btn-link" style="color: lightgray">Cancel</a>
          </div>
      </form>
      <div class="right">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-danger mt-4" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
          Delete
        </button>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">Delete Client?</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Are you sure you want to delete this client? Mailboxes can be closed & re-opened at a later date.
            </div>
            <div class="modal-footer">
              <form
                id="modal-details"
                action="/clients/delete/{{_id}}?_method=PUT"
                method="POST"
              >
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
              </form>
              <button type="button" class="btn btn-primary" data-bs-dismiss="modal">No, Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{/with}}
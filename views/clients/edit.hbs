          <div class="form-half row gx-3 mt-0">
            <div class="form-group col">
              <label for="phone" class="form-label mt-4">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" pattern="([0-9]{3}) [0-9]{3}-[0-9]{4}" value="{{client.phone}}"></input>
            </div>
            <div class="form-group col">
              <label for="email" class="form-label mt-4">Email</label>

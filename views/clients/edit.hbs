      <div class="form-group">
        <label for="phone" class="form-label mt-4">Phone Number</label>
        <input type="tel" class="form-control" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="{{client.phone}}"></input>
      </div>
      <div class="form-group">
        <label for="email" class="form-label mt-4">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="{{client.email}}"></input>
      </div>
      <div class="form-group">
        <label for="notes" class="form-label mt-4">Notes</label>
        <textarea class="form-control" id="notes" name="notes" rows="3">{{client.notes}}</textarea>
      </div>
      <div class="form-group">
        <label class="col-form-label mt-4" for="box">Mailbox</label>
        <input type="text" class="form-control" value="{{client.box}}" id="box" name="box" required>
      </div>
    </div>
    <div class="showLeft edit-options">
      <button type="submit" class="btn btn-primary">Update</button>
      <a href="/clients" class="btn btn-link">Cancel</a>
    </div>
  </form>
  <form action="/clients/{{client._id}}" method="POST" id="delete-form">
    <input type="hidden" name="_method" value="DELETE">
    <div class="showRight edit-options">
      <button type="submit" class="btn btn-danger">Delete</button>
    </div>
  </form>

<div class="container">
  <div class="card mb-3">
    <h3 class="card-header">Edit Client</h3>
    <div class="card-body">
      <form action="/clients/{{client._id}}" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div class="client-form">
      <div class="form-group">
        <label class="col-form-label mt-4" for="firstName">First Name</label>
        <input type="text" class="form-control" value="{{client.firstName}}" id="firstName" name="firstName" required>
      </div>
      <div class="form-group">
        <label class="col-form-label mt-4" for="title">Last Name</label>
        <input type="text" class="form-control" value="{{client.lastName}}" id="lastName" name="lastName" required>
      </div>
      <div class="form-group">
        <label class="col-form-label mt-4" for="otherNames">Other Names</label>
        <input type="text" class="form-control" value="{{client.otherNames}}" id="otherNames" name="otherNames">
      </div>

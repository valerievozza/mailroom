<div class="container client-list">
  <div class="right search">
    <form action="/clients/search" method="GET" class="flex search">
      <input type="text" name="search" id="search" class="form-control" placeholder="Search by name or box number" style="width: 300px" value="{{filter}}">
      <button class="btn btn-success" type="submit"><i class="fa-solid fa-magnifying-glass fa-fw"></i> Search</button>
    </form>
  </div>
  <div class="flex-between">
    <div class="right">
    <ul class="nav nav-pills">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Filter by Status</a>
        <div class="dropdown-menu" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(0px, 42px);" data-popper-placement="bottom-start">
          <a class="dropdown-item" href="/clients">
            Open 
            <span class="text-success"><strong>{{open}}</strong></span>
            <span class="visually-hidden">(current)</span>
          </a>
          <a class="dropdown-item" href="/clients/closed">
            Closed 
            <span class="text-danger"><strong>{{closed}}</strong></span>
          </a>
          <a class="dropdown-item" href="/clients/all">
            All <span class="text-info"><strong>{{total}}</strong></span>
          </a>
          {{!-- ! Add inactive filter --}}
          {{!-- <a class="dropdown-item" href="/clients/inactive">
            Inactive <span class="text-info"><strong>{{inactive}}</strong></span>
          </a> --}}
        </div>
      </li>
    </ul>
  </div>
    <a href="/clients" class="btn btn-link">Clear search field</a>
  </div>
  
  {{#each clients}}
    <div class="card">
      <div class="card-body clientMailbox">
        <a href="/clients/{{_id}}" class="client-list-entry">
          <div class="box">
            <h4>{{box}}</h4>
            {{#if safetyConcern}}
            <span><i class="fa-solid fa-circle-exclamation safetyConcern"></i></span>
            {{/if}}
          </div>
        </a>
        <a href="/clients/{{_id}}" class="client-list-entry">
          <div class="clientDetails">
            <h4 class="card-title">{{firstName}} {{lastName}}</h4>
            <h6 class="card-subtitle mb-2 text-muted">{{otherNames}}</h6>
            <p class="card-text">{{notes}}</p>
            <span>{{status}}</span>
          </div>
        </a>
        <div class="checkbox">
            {{#if (checkedToday mailChecks)}}
              <div class="check-undo">
                <form action="/clients/check/{{_id}}" method="POST">
                  <input type="hidden" name="_method" value="PUT">
                  <button type="submit" class="btn btn-link"><h3><i class="fa-solid fa-circle-check"></i></h3></button>
                </form>
                <form action="/clients/uncheck/{{_id}}" method="POST">
                  <input type="hidden" name="_method" value="PUT">
                  <button type="submit" class="btn btn-link"><h3><i class="fas fa-undo undo"></i></h3></button>
                </form>
              </div>
              <span>Last checked today</span>
            {{else}}
              <div class="check-undo">
                <form action="/clients/check/{{_id}}" method="POST">
                  <input type="hidden" name="_method" value="PUT">
                  <button type="submit" class="btn btn-link uncheckedMailbox" alt="Check mail"><h3><i class="fa-regular fa-circle-check"></i></h3></button>
                </form>
                <form action="/clients/uncheck/{{_id}}" method="POST">
                  <input type="hidden" name="_method" value="PUT">
                  <button type="submit" class="btn btn-link"><h3><i class="fas fa-undo undo"></i></h3></button>
                </form>
              </div>
              <p>
                Last checked:
                {{#if mailChecks}}
                  {{#each mailChecks}}
                    {{#if @last}}
                      {{formatDate this 'M/D/YY'}}
                    {{/if}}
                  {{/each}}
                {{else}}
                  {{formatDate createdAt 'M/D/YY'}}
                {{/if}}
              </p>

            {{/if}}
            {{#if (isInactive mailChecks)}}
              <p class="badge rounded-pill bg-warning">Inactive</p>
            {{/if}}
        </div>
      </div>
    </div>
  
  {{else}}
  <p>There are no open mailboxes</p>
  {{/each}}
  <div><a href="/clients/#top" class="btn btn-link">Back to top</a></div>
</div>
<div class="container">
  <h1>Client Page</h1>
  <div class="card mb-3">
    <h3 class="card-header">{{client.firstName}} {{client.lastName}} <span class="showBox"> {{client.box}}</span></h3>
    <div class="card-body">
      <div>
        {{#if (checkSafety client.safetyConcern)}}
        SAFETY CONCERN!
        {{/if}}
      </div>
      <h5 class="card-title">Other names client may receive mail addressed to</h5>
      <h6 class="card-subtitle text-muted">{{client.otherNames}}</h6>
    </div>
    <div class="card-body">
      <h4>Notes</h4>
      <p class="card-text">{{client.notes}}</p>
    </div>
    <div class="card-footer text-muted">
      Mailbox last checked {{formatDate client.lastChecked 'MMM Do, YYYY'}}
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <button class="btn btn-primary">Edit</button>
      <button class="btn btn-danger">Close Mailbox</button>
      <button class="btn btn-secondary">Delete</button>
    </div>
  </div>
</div>